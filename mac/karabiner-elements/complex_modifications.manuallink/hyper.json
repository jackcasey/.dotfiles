{
  "title": "Right application to Hyper",
  "rules": [{
    "manipulators": [{
      "description": "Change right application to Hyper (i.e., command+control+option+shift)",
      "from": {
        "key_code": "application",
        "modifiers": {
          "optional": [
            "any"
          ]
        }
      },
      "to": [{
        "key_code": "left_shift",
        "modifiers": [
          "left_control",
          "left_option",
          "left_command"
        ]
      }],
      "type": "basic"
    }]
  }]
}
